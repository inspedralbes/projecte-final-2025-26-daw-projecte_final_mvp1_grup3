# ==========================================================
# Loopy - Variables d'Entorn Unificades (.env.example)
# ==========================================================


# --- APP CONFIG ---
APP_NAME=Loopy
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000


# --- DATABASE (PostgreSQL) ---
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=loopy_db
DB_USERNAME=loopy
DB_PASSWORD=loopy_secret


# --- REDIS ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null


# --- SECRETS ---
# Pots generar un secret amb: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=super-secret-key-change-me


# --- FRONTEND (Nuxt) ---
SOCKET_URL=http://localhost:3001
API_URL=http://localhost:8000


